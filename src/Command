public class Command {
    private CommandType type;
    private int x;
    private int y;
    private Direction direction;

    public Command(CommandType type) {
        this.type = type;
    }

    public Command(CommandType type, int x, int y, Direction direction) {
        this.type = type;
        this.x = x;
        this.y = y;
        this.direction = direction;
    }

    public CommandType getType() {
        return type;
    }

    public int getX() {
        return x;
    }

    public int getY() {
        return y;
    }

    public Direction getDirection() {
        return direction;
    }
}
